{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["mocha", "node"],
    "target": "es6",
    "rootDir": "./src",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
